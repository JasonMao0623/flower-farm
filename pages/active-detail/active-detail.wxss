@import "../index/template/star-template/star-template.wxss";

.active-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  font-size: 30rpx;
  color: #a0a0a0;
  background: #ebeff0;
  z-index: 0;
}

.banner {
  width: 100%;
  height: 320rpx;
}

.banner-text {
  display: flex;
  flex-direction: column;
  background: white;
  margin-top:2rpx;
  padding-bottom:20rpx;
}

.banner-text image {
  width: 30rpx;
  height: 30rpx;
}

.banner-text-line1 {
  margin-top: 20rpx;
  width: 100%;
  color: black;
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}

.banner-text-all {
  width: 67%;
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 0 150rpx;
}
.time-location-stand-cost,.information{
    display:flex;
    flex-direction:column;
    width: 100%;
    margin-top:20rpx;
    background: white;
}
.time-location-stand-cost image{
    width: 30rpx;
    height: 30rpx;
    margin-left:30rpx;
    margin-top:33rpx;
}
.line{
    width: 100%;
    height:100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #ebeff0;
    display: flex;
    flex-direction: row;
}
.time-location-stand-cost text{
    margin-left:30rpx;
}
.location text:last-child,.people view{
    position: absolute;
    right: 30rpx;
}
.people view image{
    margin-left:10rpx;
}
.cost {
    color: red;
}
.information{
    flex-direction:column;
}
.infor text{
    margin-left: 30rpx;
    color: black;
    font-weight: 600;
}
.infor-detail{
    height:150rpx;
    display: flex;
    flex-direction: row;
}
.information image{
    width: 120rpx;
    height: 120rpx;
    margin:15rpx 0 0 15rpx;
}
.infor-detail view{
    display: flex;
    flex-direction: column;
}
.infor-detail view text{
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 25rpx;
    margin-left:20rpx;
}
.infor-detail view text:first-child{
    color: black;
    font-weight: 600;
}
.people-select{
    width: 60%;
    z-index: 99;
    position: absolute;
    top:380rpx;
    left:150rpx;
}
.select-container{
    display: flex;
    flex-direction: column;
    background: white;
}
.title,.xX{
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    color:black;
    font-size:34rpx;
    font-weight: 600;
    background:#ebeff0; 
}
.action{
    padding-bottom:15rpx;
}
.action-line{
    line-height:80rpx;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    font-size:24rpx;
    padding-left:25rpx;
}
.action-line view{
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    border:0.1rpx solid #ebeff0;
    margin-top:15rpx;
    margin-left:5rpx;
}
.action-line view:nth-child(3){
    width: 40rpx;
}
.xX{
    height: 100rpx;
}
.xX view{
    width:400rpx;
    height: 60rpx;
    line-height: 60rpx;
    background:lawngreen;
    color: white;
    margin:0 auto;
    margin-top:20rpx;
    border:0.1rpx black solid;
}
.mirror{
    position:absolute;
    top: 0;
    width: 100%;
    height: 1334rpx;
    background: black;
    z-index: 2;
    opacity: 0.6;
}