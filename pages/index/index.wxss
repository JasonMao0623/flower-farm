.index-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  font-size: 36rpx;
}

.location-scan {
  display: flex;
  flex-direction: row;
  position: absolute;
  z-index: 100;
  color: black;
  width: 100%;
  height: 70rpx;
}

.location-scan view {
  line-height: 70rpx;
  margin-left: 20rpx;
}

.location-scan view image {
  width: 35rpx;
  height: 25rpx;
}

.location-scan image {
  width: 50rpx;
  height: 50rpx;
}

.scan {
  margin-top: 10rpx;
  position: absolute;
  right: 20rpx;
}

swiper {
  height: 300rpx;
}

swiper image {
  width: 750rpx;
}

.menu {
  width: 100%;
  font-size: 25rpx;
}

.menu image {
  width: 70rpx;
  height: 70rpx;
}
.menu-line {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.logo-discrible {
  margin-left: 70rpx;
  margin-top: 10rpx;
}

scroll-view {
  background: #EBEFF0;
  margin-top: 30rpx;
  font-size: 30rpx;
  height:588rpx;
}
.underline{
  margin-top:5rpx;
  width:100%;
  border:0.5rpx #66E56E solid;
}

