.active-container {
  border-radius: 10rpx;
  position: relative;
}

.active-banner {
  width: 95%;
  margin-top: 10rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
}

.active-slogan {
  position: absolute;
  color: white;
  display: flex;
  flex-direction: column;
  z-index: 99;
  background: #7a7d80;
  width: 95%;
  height: 100rpx;
  top: 390rpx;
  left: 20rpx;
  opacity: 0.8;
}

.active-slogan text {
  margin-left: 10rpx;
}

.active-slogan text:first-child {
  font-size: 36rpx;
  margin-top: 10rpx;
}

.active-slogan text:last-child {
  margin-top: 10rpx;
}

.active-time-location {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 40rpx;
  position: relative;
}

.active-time {
  line-height: 40rpx;
  margin-left: 30rpx;
}

.active-time-location image {
  width: 30rpx;
  height: 30rpx;
}

.active-location {
  position: absolute;
  right: 30rpx;
  line-height: 40rpx;
}

.active-cost-collect {
  color: red;
  display: flex;
  flex-direction: row;
  height: 40rpx;
  width: 100%;
  position: relative;
  line-height: 40rpx;
}

.active-cost-collect text {
  margin-left: 30rpx;
}

.active-cost-collect view {
  position: absolute;
  right: 30rpx;
}

.active-cost-collect image {
  width: 30rpx;
  height: 30rpx;
}
