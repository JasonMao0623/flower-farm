.help-container{
    width:100%;
    display: flex;
    flex-direction:column;
    background:#EBEFF0;
    font-size:30rpx;
    color:#A0A0A0;
}
.help{
    display:flex;
    flex-direction:row;
    width:100%;
    margin-top:5rpx;
    position: relative;
    background: white;
    padding-bottom:30rpx;
}
.help-left,.help-right{
    margin-left:20rpx;
    margin-top:30rpx;
}
.help-left image{
    width:80rpx;
    height:80rpx;
    border-radius:60rpx;
}
.help-right{
    width:630rpx;
}
.help-user-time-cost{
    display:flex;
    flex-direction:row;
    height:30rpx;
    line-height:30rpx;
    width:100%;
}
.help-user-time-cost text:first-child{
    font-weight:600;
    color:black;
}
.help-user-time-cost text:nth-child(2){
    margin-left:10rpx;
    font-size:24rpx;
    margin-top:5rpx;
}
.help-user-time-cost text:last-child{
    font-weight:600;
    color:red;
    position:absolute;
    right:30rpx;
}
.help-size-farm{
    margin-top:10rpx;
    font-weight:600;
    width:100%;
    height:30rpx;
    line-height:30rpx;
}
.help-size-farm text:last-child{
    font-size:30rpx;
    position:absolute;
    right:30rpx;
}
.help-action-timeLimit{
    margin-top:5rpx;
    font-weight:600;
    width:100%;
    height:30rpx;
    line-height:30rpx;
}
.help-action-timeLimit text:first-child{
    color:orange;
}
.help-action-timeLimit image{
    width: 30rpx;
    height:30rpx;
    margin:5rpx 0 0 10rpx;
}
.help-action-timeLimit text:last-child{
    margin-left:10rpx;
}
.help-state{
    margin-top: 15rpx;
}
.help-state text:last-child{
    margin-left: 20rpx;
}
